{
  "name": "slavcodev/php-cs-fixer-rules",
  "description": "php-cs-fixer-rules - personal taste",
  "type": "library",
  "license": "MIT",
  "homepage": "https://github.com/slavcodev/php-cs-fixer-rules",
  "config": {
    "discard-changes": true,
    "optimize-autoloader": true,
    "sort-packages": true
  },
  "extra": {},
  "minimum-stability": "stable",
  "require": {
    "php": "~8.3",
    "friendsofphp/php-cs-fixer": "^3.92"
  },
  "require-dev": {
    "phpunit/phpunit": "^12.5",
    "psalm/attributes": "^0.1",
    "psalm/phar": "^6.14"
  },
  "autoload": {
    "psr-4": {
      "Slavcodev\\PhpCsFixer\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Slavcodev\\PhpCsFixer\\Tests\\": "tests"
    }
  },
  "replace": {},
  "scripts": {
    "test-units": "phpunit --colors=always",
    "test-sca": "psalm.phar --show-info=false --long-progress",
    "fix-cs": "php-cs-fixer fix -v --diff --ansi",
    "check-cs": "@fix-cs --dry-run",
    "lint": [
      "@check-cs",
      "@test-sca"
    ],
    "test": [
      "@lint",
      "@test-units"
    ]
  }
}
